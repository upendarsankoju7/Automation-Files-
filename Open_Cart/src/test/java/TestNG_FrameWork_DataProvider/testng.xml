<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!-- Root Suite Definition -->
<suite name="Suite">

  <!-- Chrome Test Definition -->
  <test thread-count="5" name="Test">
    <!-- Parameter for browser type -->
    <parameter name="browser" value="chrome" />
    <!-- Parameter for the URL to be tested -->
    <parameter name="url" value="https://opensource-demo.orangehrmlive.com/web/index.php/auth/login" />
    <!-- Classes containing test methods -->
    <classes>
      <class name="TestNG_FrameWork_DataProvider.TestNG_FrameWork_ParaMeter" />
    </classes>
  </test>
  
  <!-- Edge Test Definition -->
  <test name="edgetest">
    <!-- Parameter for browser type -->
    <parameter name="browser" value="edge" />
    <!-- Parameter for the URL to be tested -->
    <parameter name="url" value="https://opensource-demo.orangehrmlive.com/web/index.php/auth/login" />
    <!-- Classes containing test methods -->
    <classes>
      <class name="TestNG_FrameWork_DataProvider.TestNG_FrameWork_ParaMeter" />
    </classes>
  </test>
  
  <!-- Firefox Test Definition -->
  <test name="firefoxtest">
    <!-- Parameter for browser type -->
    <parameter name="browser" value="firefox" />
    <!-- Parameter for the URL to be tested -->
    <parameter name="url" value="https://opensource-demo.orangehrmlive.com/web/index.php/auth/login" />
    <!-- Classes containing test methods -->
    <classes>
      <class name="TestNG_FrameWork_DataProvider.TestNG_FrameWork_ParaMeter" />
    </classes>
  </test>

</suite>
